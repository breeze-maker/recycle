.content {
  flex-direction: column;
}

.phone_layout {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.phone {
  margin-top: 10px;
  display: flex;
  width: 90%;
  flex-direction: row;
  justify-content: flex-start;
}

.phone_image {
  margin-right: 5px;
  display: flex;
  width: 90rpx;
  height: 90rpx;
}

.phone_image_layout {
  display: flex;
  flex-direction: row;
  width: 80%;
}

.phone_info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.phone_info_title {
  display: flex;
  font-size: 14px;
  color: #0298f5;
}

.phone_info_text {
  display: flex;
  margin-top: 5pt;
  font-size: 12px;
  color: #8d8f99;
}

.phone_select {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.phone_select_btn {
  display: flex;
  width: 80px;
  height: 35px;
  background: #2488ec;
  color: white;
  font-size: 13px;
  justify-content: flex-end;
}

.to_next_view {
  margin-top: 10px;
}

.line1_image {
  display: flex;
  margin-top: 10px;
  height: 5px;
  width: 100%;
  background: #f2f4f5;
}

.hot_title {
  margin-top: 15rpx;
  display: flex;
  height: 70px;
  width: 100%;
  flex-direction: column;
  margin-bottom: -20px;
}

.hot_title_an {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.hot_title_an_crown {
  height: 15px;
  width: 28px;
}

.hot_title_text {
  margin-top: 2px;
  display: flex;
  font-size: 14px;
  color: black;
  flex-direction: row;
  justify-content: center;
}

.to_next_view_btn1 {
  display: flex;
  height: 40px;
  width: 95%;
  background: #5d52f4;
  flex-direction: column;
  justify-content: center;
  color: white;
  font-size: 18px;
}

.to_next_view_btn2 {
  display: flex;
  height: 40px;
  width: 95%;
  background: #5d52f4;
  flex-direction: column;
  justify-content: center;
  color: white;
  font-size: 18px;
}

.hot_brand {
  margin-top: 5rpx;
  display: flex; /*or inline-flex*/
  flex-direction: row;
  flex-wrap: nowrap; /*nowrap不要多行显示*/
  justify-content: space-around;
}

.hot_brand_view_ico {
  height: 120rpx;
  width: 220rpx;
}

.bottom {
  display: flex;
  margin-top: 10px;
  margin-bottom: 10px;
  width: 100%;
  height: 200px;
  background: #f2f4f5;
  flex-direction: column;
}

.bottom_layout {
  margin-top: 30px;
  margin-bottom: 30px;
  margin-left: 20px;
  margin-right: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items:center; */
}

.bottom_title_an {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.bottom_title_an_crown {
  height: 14px;
  width: 28px;
}

.bottom_title_text {
  display: flex;
  font-size: 14px;
  color: black;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10px;
}

.bottom_server {
  margin-top: 5px;
  display: flex; /*or inline-flex*/
  flex-direction: row;
  flex-wrap: nowrap; /*nowrap不要多行显示*/
  justify-content: space-around;
}

.bottom_server_view_ico {
  height: 100rpx;
  width: 100rpx;
}

.bottom_server_view_text {
  font-size: 12px;
  color: #979aaa;
}

.to_next_view_btn_show{
  display: block;
}

.to_next_view_btn_hide{
  display: none;
}

.info_box_happy{
    font-size: 12px;
    color: #333;
    white-space : nowrap;
    padding: 10rpx 3rpx;
    background: #fff;
    border-bottom: 2rpx #f5f5f5 solid;
    position: relative;
    overflow: hidden;
    width: 100%;
}
.info_box_happy_txt{
    color: red;
    width: 100%;
    position: relative;
}

canvas{
  position: fixed;
  top: 0;
  left: 400px;
}
/* 画布绘制过程不能隐藏 但是又不能被用户看见 所以定位在用户看不到地方 */

.share{
  position: absolute;
  bottom: 100rpx;
  width: 70%;
  left: 15%;
  height: 100rpx;
  line-height: 100rpx;
}
.preview {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.9);
  position: absolute;
  z-index: 2;
}
.preview image{
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  border: 1px dashed #fff;
}
.preview button{
  width: 40%;
  position: absolute;
  bottom: 150rpx;
  left: 30%;
}

.canvas{
  position: fixed;
  top: 0;
  left: 999px;
}
