.top {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.mobile {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.mobile_image {
  display: flex;
  width: 50%;
  background: '../../images/index1_mobile_bk.png';
  justify-content: center;
}

.mobile_image_ico {
  margin-right: 5px;
  display: block;
  position:relative;
  width: 240rpx;
  height: 240rpx;
  text-align: center;
  overflow: hidden;
  background-repeat:no-repeat;
  background-position:center center;
  background-size:auto 100%;
}
.mobile_image_ico_phone_image{
  display:block;
  height:100%;
  position:relative;
  left:50%;
  margin-left:-120rpx;
}

.mobile_info {
  display: flex;
  width: 50%;
  flex-direction: column;
  justify-content: center;
}

.mobile_info_title {
  display: flex;
  flex-direction: row;
}

.mobile_info_title_ico {
  display: flex;
  width: 3px;
  height: 15px;
  margin-right: 5px;
}

.mobile_info_title_text {
  display: flex;
  font-size: 12px;
  color: #999;
}

.mobile_info_name {
  margin-top: 5px;
  display: flex;
  font-size: 14px;
  color: #4560e6;
  font-weight: 700;
}

.mobile_info_price {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 5px;
}

.mobile_info_price_title {
  display: flex;
  font-size: 12px;
}

.mobile_info_price2_text {
  display: flex;
  font-size: 12px;
  color: red;
}

.mobile_info_btn {
  display: flex;
  margin-top: 5px;
  width: 80px;
  height: 35px;
  background:white;
  font-size: 12px;
  flex-direction: row;
  justify-content: left;
}

.bottom_btn {
  display: flex;
  height: 45px;
  width: 95%;
  background: #5d52f4;
  flex-direction: column;
  justify-content: center;
  margin-top: 50px;
  color: white;
  font-size: 14px;
   background-repeat:no-repeat;
  border:none;
}
