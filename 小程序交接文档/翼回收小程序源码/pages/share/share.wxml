<span style="font-family:'Comic Sans MS';font-size:18px;color:#333333;">

   <!-- 画布大小按需定制 这里我按照背景图的尺寸定的  -->
    <canvas canvas-id="shareImg" style="width:545px;height:771px"></canvas>

    <!-- 预览区域  -->
    <view hidden='{{hidden}}' class='preview'>
      <image src='{{prurl}}' mode='widthFix'></image>
      <button type='primary' size='mini' bindtap='save'>保存分享图</button>
    </view>

    <view class="canvas-box">
      <canvas canvas-id="myCanvas" style="width:100%;height:{{windowHeight}}px;"></canvas>
    </view>

  <view class="container" class="zn-uploadimg">
     <button class='container_btn1' type="primary" open-type='share'>立即分享给好友</button>
     <button class='container_btn2' type="primary" open-type="getUserInfo" bindtap="share2">立即分享到朋友圈</button> 
  </view>


</span>